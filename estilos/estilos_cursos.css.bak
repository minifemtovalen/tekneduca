@import url('https://fonts.googleapis.com/css2?family=Lato:ital,wght@0,100;0,300;0,400;0,700;0,900;1,100;1,300;1,400;1,700;1,900&family=Open+Sans:ital,wght@0,300;0,400;0,500;0,600;0,700;0,800;1,300;1,400;1,500;1,600;1,700;1,800&display=swap');
*{  
     margin: 0;
     padding: 0;
     box-sizing: border-box;

}

body{
     font-family: 'Open Sans', sans-serif;
}
                                         /* Portada Cover 1*/
   .contenido_cover{
	   width: 100%;
       height: 100%;
	   position: relative;
	   top: 90px;
	   background-image: url(../imagenes/banner/banner-b.jpg);
	   background-position: center;
	   background-size: cover;
	   background-repeat: no-repeat;
	  animation: fade 1s ease-in-out;
	   z-index: 1;	
   }
    .contenido_info_cover{
	   width: 90%;
	   max-width: 1145px;
	   height: 400px;
	   margin: auto;
	   display: flex;
	   flex-direction: column;
	   text-align: left;
	   justify-content: center;
	   align-items: left;
	   font-family: 'Lato', sans-serif;
	   font-weight: 150%;
	   position: relative;
       z-index: 1;	   
}
   .contenido_info_cover h1{
	   	margin-top: 20px;
		font-size: 50px;
		font-weight: 600;
		color: #690AFF;
		text-shadow: 2px 2px #1B444A;
		margin-top: 20px;
		margin-bottom: 30px;
		transform: uppercase;
	}
	.contenido_info_cover h2{
		font-size: 28px;
		font-weight: 500;
		color: #1B4147;
		
	}
	.contenido_info_cover p{
		font-size: 22px;
		font-weight: 500;
		color: #1B4147;
	}
	

                                        /* Estilos generales */
.contenedor,
.wave-contenedor{
    width: 90%;
    max-width: 1000px;
    overflow: hidden;
    margin: auto;
    padding: 0 0 80px 0;
	
}
.contenedor{
    padding: 80px 0;
}

.titulo_cover{
	margin-top: 200px;
    display:  flex;
	flex-direction: row;
	text-align: left; 
}
.titulo_cover h1{
    font-weight: 500;
    font-size: 35px;
    text-align: left;  
    color: #003333;	
}
.titulo_cover h2{
	font-weight: 500;
    font-size: 35px;
    font-weight: 900;
    color: #F03559;  	
}
.content-cards-cursos{
	padding: 0 80px;
}

                                              /* Section */

.website{
    display: flex;
    justify-content: space-between;
}

.website img{
	margin-top: 150px;
    width: 58%;
}
.website .contenedor-textos-main{
    width: 40%;
}

.parrafo{
    text-align: justify;
	margin-top: 25px;
	line-height: 150%;
	color: #202931;	
    /* margin-bottom: 20px; */
}



/* Info */

.info{
    background: #F03559;
   
}
.contenedor h2{
	text-align: center;
	font-weight: 800;
	font-size: 36pt;
	color: #F8F9FA;
	margin-bottom: 30px;
}
.contenedor p{
	margin-top: 30px;
	font-size: 28pt;
	font-weight: 600;
	text-align: center;
	color: #171C20;
}
.info2{
	  background: -webkit-linear-gradient(right,#F03559 0%,#690AFF 100%);
	  background: linear-gradient(to right, #F03559 0%,#690AFF 100%); 
}
                                                    /* Responsive */
													
@media screen and (max-width: 1080px){
	.card-cursos{
       width: 90%;	
    }
 }											
@media screen and (max-width: 830px){
	.contenido_cover:before{
	   content: "";
	   width: 100%;
	   height: 100%;
	   background: rgba(255,255,255,0.6);
	   position: absolute;
	   top: 0;
	   left: 0;
   }
	.contenido_info_cover h1{
		text-align: center;
        font-size: 34px;
	}
	.contenido_info_cover h2{
		text-align: center;
        font-size: 24px;
	}
	.contenido_info_cover p{
		text-align: center;
        font-size: 18px;
	}
	
	.titulo_cover{
	    margin-top: 80px;     
     }
	.website{
		flex-direction: column-reverse;
		padding: 10px;
		justify-content: center;
		 align-items: center;
	}
	.website .contenedor-textos-main{
		width: 100%;
		padding: 30px;
	}
	.website img{
		margin-top: 30px;
	    width: 100%;
    }
	
}
