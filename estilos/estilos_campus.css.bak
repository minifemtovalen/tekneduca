@import url('https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300;0,400;0,500;0,600;0,700;0,800;1,300;1,400;1,500;1,600;1,700;1,800&display=swap');
*{
    margin:0;
    padding: 0;
    box-sizing: border-box;
}
body{
    font-family: 'Open Sans', sans-serif;
}  

                 /* Portada */
.container_campus{
	margin-top: 90px;
    background: #bc4e9c;  /* fallback for old browsers */
    background: -webkit-linear-gradient(right, #f80759, #690AFF);  /* Chrome 10-25, Safari 5.1-6 */
    background: linear-gradient(to right, #f80759, #690AFF); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
    height: auto;
    padding: 48px;
    width: 100%;
}
.container_info_campus{
    width: 90%;
    max-width: 1200px;
    display: flex;
    align-items: center;
    justify-content: space-around;
    margin: auto;
}
.container_info_campus img{
    display: block;
    height: 500px;
    object-fit: cover;
    animation: arriba 1s ease-in;
}

.textos{
    width: 50%;
    color:#000;
}
.textos h1{
    font-size:50px;
	color: white;
	text-shadow: 2px 2px #1B444A;
	margin-bottom: 20px;
    animation: moverDerecha 1s ease-in;

}

.textos h2{
    font-size:25px;
	color: #FFF3EC;
    animation: moverIzquierda 1s ease-in;
}

.textos a{
    display: inline-block;
    color:#fff;
    font-weight: 600;
    text-decoration: none;
    margin-top: 30px;
    border: 2px solid #fff;
    width: 150px;
    border-radius: 3px;
    text-align: center;
    padding: 10px 0;
    animation: arriba 1s ease-in;
}
.textos a:hover{
    background: rgba(190,255,255,0.2);
}
.wave{
    height: 100px;
    width: 100%;
    background: #bc4e9c;  /* fallback for old browsers */
    background: -webkit-linear-gradient(right, #f80759, #690AFF);  /* Chrome 10-25, Safari 5.1-6 */
    background: linear-gradient(to right, #f80759, #690AFF); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
}
                                                       
													   /* Sección I */

.contenedor-campus{
    width: 90%;
    max-width: 1000px;
    overflow: hidden;
    margin: auto;
    padding: 0 0 80px 0;
	background: white;
}

.campus-textos p{
    text-align: left;
}
.pageweb{
    display: flex;
    justify-content: space-between;
}
.pageweb img{
    width: 48%;
}
.pageweb .campus-textos{
    width: 40%;
}
.pageweb .campus-textos p{
    text-align: justify;
    margin-top: 30px;
	color: #1C1C1F;
}
.pageweb .campus-textos h2{
    font-weight: 600;
    font-size: 50px;
	background: -webkit-linear-gradient(#F7075A, #f5576c, orange);
	background: linear-gradient(#F7075A, #f5576c, orange);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    color: #F7075A;  
    text-align: left;
}

                              /* Lista de Campus Virtuales */

.cursos_lista{
	padding-top: 50px;
	padding-bottom: 30px;
    background: #bc4e9c;  /* fallback for old browsers */
    background: -webkit-linear-gradient(right, #EEF9F9, #FFF1F5);  /* Chrome 10-25, Safari 5.1-6 */
    background: linear-gradient(to right, #EEF9F9, #FFF1F5); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
}
.cursos_lista h2{
	text-align: center;
    margin-bottom: 40px;
	font-size: 40px;
	font-weight: 600;
	line-height: 100%;
	color: #1C1C1F;
}
.cursos_lista h3{
	text-align: center;
    margin-bottom: 40px;
	font-size: 30px;
	line-height: 100%;
	color: #1C1C1F;
}
.cursos-cont{
	width: 100%;
	height: 100%;
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	background: #bc4e9c;  /* fallback for old browsers */
    background: -webkit-linear-gradient(right, #EEF9F9, #FFF1F5);  /* Chrome 10-25, Safari 5.1-6 */
    background: linear-gradient(to right,#EEF9F9, #FFF1F5); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
	margin-left: auto; 
	margin-right: auto;
	text-align: center;
	
}
.cursos-cont img{
	width: 140px;
}

.caja{
	padding-left: 20px;
	padding-right: 20px;
}
.caja h4{
	font-size: 12pt;
	font-weight: 600;
	color: #1B4147;
	transform: uppercase;
}
.caja p{
		font-size: 14px;
		font-weight: 500;
		color: #1B4147;
		margin-bottom: 20px;
}

                                                                  /* Línea de Tiempo Registro */

.registro{
	padding-top: 50px;
	padding-bottom: 30px;
    background: #ffffff;
}
.campus-registro h2{
	text-align: center;
    font-size: 40px;
	font-weight: 600;
	line-height: 100%;
	color: #003593;
}   
.campus-registro p{
	text-align: center;
    margin-top: 20px;
	font-size: 18px;
	font-weight: 500;
	color: #1C1C1F;
}  
 .timeline{
	 background: #ffffff;
}
.timeline ul li {
  list-style-type: none;
  position: relative;
  width: 6px;
  margin: 0 auto;
  padding-top: 50px;
  background: #690AFF;
}

.timeline ul li::after {
  content: '';
  position: absolute;
  left: 50%;
  bottom: 0;
  transform: translateX(-50%);
  width: 30px;
  height: 30px;
  border-radius: 50%;
  background: #F7075A;
}

.timeline ul li div {
  position: relative;
  bottom: 0;
  width: 500px;
  padding: 25px 15px;
  text-align: justify;
  background: #EEF9F9;
}
.timeline ul li div p{
	font-size: 18px;
	font-weight: 600;
	margin-bottom: 10px;
}

.timeline ul li div::before {
  content: '';
  position: absolute;
  bottom: 7px;
  width: 0;
  height: 0;
  border-style: solid;
}

.timeline ul li:nth-child(odd) div {
  left: 45px;
}

.timeline ul li:nth-child(odd) div::before {
  left: -15px;
  border-width: 8px 16px 8px 0;
  border-color: transparent #F7075A transparent transparent;
}

.timeline ul li:nth-child(even) div {
  left: -539px;
}

.timeline ul li:nth-child(even) div::before {
  right: -15px;
  border-width: 8px 0 8px 16px;
  border-color: transparent transparent transparent #F7075A;
}

@keyframes moverIzquierda{
    0%{
        opacity: 0;
        transform: translateX(-100px);
    }

    100%{
        opacity: 1;
        transform: translate(0);
    }
}

@keyframes moverDerecha{
    0%{
        opacity: 0;
        transform: translateX(100px);
    }

    100%{
        opacity: 1;
        transform: translate(0);
    }
}

@keyframes arriba{
    0%{
        opacity: 0;
        transform: translateY(100px);
    }

    100%{
        opacity: 1;
        transform: translate(0);
    }
}
                                                         /* Reponsive */

@media screen and (max-width:1000px){
    .container_campus img{
        height: 400px;
    }

}

@media screen and (max-width: 900px) {
  .timeline ul li {
    margin-left: 20px;
  }
   
  .timeline ul li div {
    width: calc(100vw - 91px);
  }
   
  .timeline ul li:nth-child(even) div {
    left: 45px;
  }
   
  .timeline ul li:nth-child(even) div::before {
    left: -15px;
    border-width: 8px 16px 8px 0;
    border-color: transparent #F45B69 transparent transparent;
  }
}

@media screen and (max-width:800px){
    .container_campus img{
        height: 300px;
    }    
}


 
@media screen and (max-width: 860px){
	.pageweb{
		flex-direction: column-reverse;
		justify-content: center;
		align-items: center;
	}
	.pageweb .campus-textos{
		width: 100%;
}
	.pageweb img{
		width: 100%;
    }
	
	.cursos-cont{
		flex-direction: column;
		padding: 10px;
		justify-content: center;
	}
	
	.caja{
		
		padding-left: 0px;
		padding-right: 0px;
	}
	
}
@media screen and (max-width:700px){
    .container_campus img{
        height: 250px;
    }
    .textos h1{
        font-size: 45px;
    }

    .textos h2{
        font-size: 20px;
    }
    
}


@media screen and (max-width:450px){
    .container_info_campus{
        width: 100%;
        flex-wrap: wrap-reverse;
        justify-content: center;
    }
    .textos{
        width: 100%;
        text-align: center;
    }
    .textos h1{
        font-size: 35px;
    }    
}

@media screen and (max-width:340px){
    .container_campus img{
        height: 150px;
    }
    .textos h1{
        font-size: 30px;
    }
    .textos a{
        width: 120px;
    }
    .textos h2{
        font-size: 15px;
    }
	.pageweb{
		flex-direction: column-reverse;
		justify-content: center;
		align-items: center;
	}
	.pageweb .campus-textos{
		width: 100%;
}
	.pageweb img{
		width: 100%;
    }
	
	.cursos-cont{
		flex-direction: column;
		padding: 10px;
		justify-content: center;
	}
	
	.caja{
		
		padding-left: 0px;
		padding-right: 0px;
	}
    
}

